<%
addHead('<meta name="description" content="Welcome Page">');
addHead('<meta name="author" content="Chinedum Ukejianya">');
addStyle('flat-ui.min.css', { rel: 'stylesheet' });
addStyle('vendor/bootstrap.min.css', { rel: 'stylesheet' });
addStyle('login.css', {rel: 'stylesheet'})
addStyle('signup.css', {rel: 'stylesheet'})
addScript('footer', 'vendor/jquery.min.js');
addScript('footer', 'flat-ui.min.js');
%>

<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>
    <% include header %>
    </style>
</head>
<body>

<div class="col-sm-8 col-sm-offset-2">

<div class="col-sm-5 col-sm-offset-3">
    <br>
    <h1><span class="fui-sign-in"></span> Signup</h1>
    <hr>
    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
      <div class="form-group">
          <label>First Name</label>
          <input type="text" class="form-control" name="first">
      </div>
      <div class="form-group">
          <label>Last Name</label>
          <input type="text" class="form-control" name="last">
      </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            <input type="text" class="form-control" name="phone">
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>

    <hr>

    <p>Already have an account? <a href="/">Login</a></p>
    <br>
</div>

</div>
</div>
<% include footer %>
</body>
</html>
